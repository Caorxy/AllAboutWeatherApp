<Window x:Class="AllAboutWeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AllAboutWeatherApp"
        mc:Ignorable="d"
        Title="All About Weather" Height="600" Width="800"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Border Background="DodgerBlue"
            CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
        
            <TextBlock Text="All About Weather"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="Black"
                       FontWeight="Bold"
                       FontSize="50"
                       Margin="60,40,0,0"/>
            
            <Image Grid.Row="1" 
                   Source="Images/weather.png"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,40,210,10"
                   />
        </Grid>
    </Border>
</Window>
