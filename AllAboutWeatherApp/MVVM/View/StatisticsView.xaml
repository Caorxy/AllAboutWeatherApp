<UserControl x:Class="AllAboutWeatherApp.MVVM.View.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AllAboutWeatherApp.MVVM.View"
             xmlns:viewModel="clr-namespace:AllAboutWeatherApp.MVVM.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="525" d:DesignWidth="700"
             FontFamily="Fonts/#Lato">
    <UserControl.DataContext>
        <viewModel:MainViewModel />
    </UserControl.DataContext>
    <Grid>
        <Button 
            Name="HomeButton"
            Style="{StaticResource HomeButtonStyle}"
            Command="{Binding HomeViewCommand}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="0,0,0,250"/>
                </Style>
            </Button.Resources>
            <StackPanel>
                <Image Source="../../Images/home.png"
                       Width="70"
                       Margin="40,0,0,30"/>
            </StackPanel>
        </Button>
        
        <Border
                   Width="400"
                   Height="450"
                   Background="Black"
                   Opacity="0.7"
                   HorizontalAlignment="Left"
                   Margin="60,0,0,0"
                   CornerRadius="10"
               >
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                    
               <TextBlock Grid.Row="0" Grid.Column="0" 
                             Width="100" 
                             Height="20"
                             Foreground="White"  
                             Text="Latitude"
                             VerticalAlignment="Top"
                             TextAlignment="Center"
                             Margin="0,30,0,0"/>  
                <TextBox Grid.Row="0" Grid.Column="0" 
                         Name="Lat"
                         Width="100"
                         Style="{StaticResource TextBoxStyle}">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
               <TextBlock Grid.Row="0" Grid.Column="1" 
                          Width="100" 
                          Height="20"
                          Foreground="White"  
                          Text="Longitude"
                          VerticalAlignment="Top"
                          TextAlignment="Center"
                          Margin="0,30,0,0"/>  

                <TextBox Grid.Row="0" Grid.Column="1"
                         Name="Lon"
                         Width="100"
                         Style="{StaticResource TextBoxStyle}">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
                
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           Margin="50,25,0,0"
                           Width="280"
                           Height="20"
                           Foreground="White"
                           VerticalAlignment="Bottom">
                    <TextBlock.Text>    
                        <MultiBinding StringFormat="{}{0} + {1}">
                            <Binding Path="StatisticsVm.WeatherForecastData.City.Name" />
                            <Binding Path="StatisticsVm.WeatherForecastData.City.Country" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"
                        Margin="15,10,0,0">
                        <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Center">
                                    <TextBox
                                        IsReadOnly="True"
                                        TextAlignment="Center"
                                        BorderThickness="0"
                                        Background="Black"
                                        Foreground="White"
                                        FontSize="15"
                                        Text="{Binding Path=WeatherForecastVm.FirstTabForecastData.Dt_txt}"
                                    />
                                </TextBlock>
                                <TextBlock Grid.Row="1">
                                    <Image
                                        Source="../../Images/thermometer.png"
                                        Margin="15,10,0,0"
                                        Width="25"
                                        />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="10,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="18"
                                        Width="70"
                                        Text="{Binding Path=WeatherForecastVm.FirstTabForecastData.Main.Temp}"
                                        />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="0,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="18"
                                        Text="°C"
                                        />
                                </TextBlock>
                                <TextBlock Grid.Row="2">
                                    <Image
                                        Source="../../Images/cloudy-dau.png"
                                        Margin="15,10,0,0"
                                        Width="25"
                                    />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="10,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="18"
                                        Width="70"
                                        Text="{Binding Path=WeatherForecastVm.FirstTabForecastData.Clouds.All}"
                                    />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="0,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="18"
                                        Width="20"
                                        Text="%"
                                    />
                                    
                                </TextBlock>
                                <TextBlock Grid.Row="3">
                                    <Image
                                        Source="../../Images/drop.png"
                                        Margin="15,10,0,0"
                                        Width="25"
                                    />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="10,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="18"
                                        Width="68"
                                        Text="{Binding Path=WeatherForecastVm.FirstTabForecastData.Rain.ThreeH}"
                                    />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="0,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="12"
                                        Width="30"
                                        Text="mm"
                                    />
                                    
                                </TextBlock>
                                <TextBlock Grid.Row="4">
                                    <Image
                                        Source="../../Images/wind-flag.png"
                                        Margin="15,10,0,0"
                                        Width="25"
                                    />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="10,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="18"
                                        Width="68"
                                        Text="{Binding Path=WeatherForecastVm.FirstTabForecastData.Wind.Speed}"
                                    />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="0,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="12"
                                        Text="m/s"
                                    />
                                    
                                </TextBlock>
                                <TextBlock Grid.Row="5"
                                           Margin="0,0,0,0">
                                    <Image
                                        Source="../../Images/humidity.png"
                                        Margin="15,10,0,0"
                                        Width="25"
                                    />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="10,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="18"
                                        Width="70"
                                        Text="{Binding Path=WeatherForecastVm.FirstTabForecastData.Main.Humidity}"
                                    />
                                    <TextBox
                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="0,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="18"
                                        Text="%"
                                    />
                                </TextBlock>
                            </Grid>
                </Border>
                <Image Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
                       Width="150"
                       Source="../../Images/weatherForecastIcons/50d.png"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                           Foreground="White"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"
                           FontSize="8"
                           Text="Current weather data provided by OpenWeatherMap"/>
            </Grid>
        </Border>
        <Button 
            Margin="195,0,0,150"
            IsDefault="True"
            Width="150"
            Height="50"
            BorderThickness="0"
            Foreground="White"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontWeight="DemiBold"
            FontSize="14"
            Content="Get Current Weather"
            Style="{StaticResource ButtonStyle}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            </Button>
    </Grid>
</UserControl>
