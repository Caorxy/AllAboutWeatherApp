                                        IsReadOnly="True"
                                        TextAlignment="Center"
                                        BorderThickness="0"
                                        Background="Black"
                                        Foreground="White"
                                        FontSize="15"
                                        Text="{Binding Path=WeatherForecastVm.FirstTabForecastData.Dt_txt}"
                                    />
                                </TextBlock>
                                <TextBlock Grid.Row="1">
                                    <Image
                                        Source="../../Images/thermometer.png"
                                        Margin="15,10,0,0"
                                        Width="25"
                                        />
