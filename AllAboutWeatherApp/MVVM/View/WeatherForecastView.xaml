                                        IsReadOnly="True"
                                        BorderThickness="0"
                                        Margin="10,10,0,0"
                                        Foreground="White"
                                        Background="Black"
                                        FontSize="18"
                                        Width="70"
                                        Text="{Binding Path=WeatherForecastVm.FirstTabForecastData.Main.Temp}"
                                        />
