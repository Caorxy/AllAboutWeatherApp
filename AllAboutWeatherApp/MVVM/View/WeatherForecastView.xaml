<UserControl x:Class="AllAboutWeatherApp.MVVM.View.WeatherForecastView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:AllAboutWeatherApp.MVVM.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="525" d:DesignWidth="800">
        <UserControl.DataContext>
            <viewModel:MainViewModel />
        </UserControl.DataContext>
        <Grid>
            <Button 
                Name="HomeButton"
                Style="{StaticResource HomeButtonStyle}"
                Command="{Binding HomeViewCommand}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="0,0,0,250"/>
                    </Style>
                </Button.Resources>
                <StackPanel>
                    <Image Source="../../Images/home.png"
                           Width="70"
                           Margin="40,0,0,30"/>
                </StackPanel>
            </Button>
            
            <Button 
                Command="{Binding WeatherForecastVm.NextCommand}"    
                Name="NextButton"
                Style="{StaticResource NavButtonStyle}"
                HorizontalAlignment="Right"
                Margin="0,60,55,0">
                <Button.Content>
                    <TextBlock Foreground="White"
                               FontSize="17">NEXT</TextBlock>
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10,10,10,10"/>
                    </Style>
                </Button.Resources>
            </Button>   
            
            <Button 
                Command="{Binding WeatherForecastVm.BackCommand}"    
                Name="BackButton"
                Style="{StaticResource NavButtonStyle}"
                HorizontalAlignment="Left"
                Margin="10,60,0,0">
                <Button.Content>
                    <TextBlock Foreground="White"
                               FontSize="17">BACK</TextBlock>
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10,10,10,10"/>
                    </Style>
                </Button.Resources>
            </Button>
     
        
